<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <%= turbo_stream_from 'posts' %>
  <tbody>
    <% @posts.each do |post| %>
      <%= render post %>
    <% end %>
  </tbody>
  
</table>

<br>

<%= link_to 'New Post', new_post_path %>
<%= turbo_frame_tag 'new_post', src: new_post_path, target: :_top %>
